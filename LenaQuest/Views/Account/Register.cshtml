@model LenaQuest.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="modal-header">
    <h2>Регистрация нового пользователя</h2>
</div>
<div class="modal-body">
    <form method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="FirstName"></label><br />
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div>
            <label asp-for="SecondName"></label><br />
            <input asp-for="SecondName" />
            <span asp-validation-for="SecondName"></span>
        </div>
        <div>
            <label asp-for="Age"></label><br />
            <input asp-for="Age" />
            <span asp-validation-for="Age"></span>
        </div>
        <div>
            <label asp-for="City"></label><br />
            <input asp-for="City" />
            <span asp-validation-for="City"></span>
        </div>
        <div>
            <label asp-for="QuestExpirience"></label><br />
            <input asp-for="QuestExpirience" />
            <span asp-validation-for="QuestExpirience"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="PasswordConfirm"></label><br />
            <input asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div>
            <input class="btn btn-success" type="submit" value="Регистрация" />
        </div>
    </form>
</div>