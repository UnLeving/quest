@using Microsoft.AspNetCore.Identity
@using LenaQuest.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-controller="Users" asp-action="Profile" asp-route-email="@User.Identity.Name" class="nav-link text-dark" title="Manage" method="post">Hello @User.Identity.Name!</a>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="" onclick="RenderActions('/Account/Register/')" data-target="#modalCreate" data-toggle="modal">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="" onclick="RenderActions('/Account/Login/')" data-target="#modalCreate" data-toggle="modal">Login</a>
        </li>
    }
</ul>