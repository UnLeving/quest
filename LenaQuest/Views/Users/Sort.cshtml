@model LenaQuest.ViewModels.SortViewModel

<h2>Sort options</h2>

<form asp-action="Index" method="post">
    <div class="form-group form-inline">
        <input asp-for="AgeMin" class="form-control" type="number" placeholder="Age min" />
        <input asp-for="AgeMax" class="form-control" type="number" placeholder="Age max" />
    </div>
    <div class="form-group form-inline">
        <input asp-for="ExpMin" class="form-control" type="number" placeholder="Quest expirience min" />
        <input asp-for="ExpMax" class="form-control" type="number" placeholder="Quest expirience max" />
    </div>
    <div class="form-group form-inline">
        <input asp-for="City" class="form-control" type="text" placeholder="City" />
    </div>
    <div class="form-group form-inline">
        <button type="submit" class="btn btn-primary">Sort</button>
    </div>
</form>