<h2>Sort options</h2>

<form asp-action="Sort" method="post">
    <div class="form-group form-inline">
        <input name="AgeMin" class="form-control" type="number" placeholder="Age min" />
        <input name="AgeMax" class="form-control" type="number" placeholder="Age max" />
    </div>
    <div class="form-group form-inline">
        <input name="QuestExpirienceMin" class="form-control" type="number" placeholder="Quest expirience min" />
        <input name="QuestExpirienceMax" class="form-control" type="number" placeholder="Quest expirience max" />
    </div>
    <div class="form-group form-inline">
        <input name="City" class="form-control" type="text" placeholder="City" />
    </div>
    <div class="form-group form-inline">
        <button type="submit" class="btn btn-primary">Sort</button>
    </div>
</form>