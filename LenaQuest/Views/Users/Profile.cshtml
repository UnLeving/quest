@model LenaQuest.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecondName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecondName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuestExpirience)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestExpirience)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuestDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestDetails)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-email="@Model.Email" class="btn btn-info">Edit</a>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Index" class="btn btn-primary">User List</a>
    }
    <a asp-action="Index" asp-controller="Home" class="btn btn-info">Back</a>

</div>
